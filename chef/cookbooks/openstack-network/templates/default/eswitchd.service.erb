### BEGIN INIT INFO
# Provides:          eswitchd
# Required-Start:    $local_fs
# Required-Stop:     $local_fs
# Default-Start:     2 3 5
# Default-Stop:      0 1 6
# Short-Description: eswitch
### END INIT INFO

USER="<%= node['openstack']['network']['platform']['user'] %>"
CONFFILE="/etc/eswitchd/eswitchd.conf"

. /etc/rc.status
rc_reset

case $1 in
    start)
        echo -n "Starting eswitchd"
        /sbin/startproc -q -s -u $USER /usr/bin/eswitchd --config-file=$CONFFILE
        rc_status -v
	;;
    stop | force-stop)
        echo -n "Shutting down eswitchd"
        /sbin/killproc /usr/bin/eswitchd
        rc_status -v 
        ;;
    reload | force-reload)
        $0 stop
        $0 start
        ;;
    try-restart|condrestart)
        #restart the service if the service is already running
        if test "$1" = "condrestart"; then
          echo "${attn} Use try-restart ${done}(LSB)${attn} rather than condrestart ${warn}(RH)${norm}"
        fi
        $0 status
        if test $? = 0; then
          $0 restart
        else
          rc_reset # Not running is not a failure.
        fi
        rc_status # Remember status and be quiet
        ;;
    restart)
        $0 stop
        $0 start
        ;;
    status)
        echo -n "Checking for service eswitchd"
        /sbin/checkproc /usr/bin/eswitchd
        rc_status -v  
        exit $?
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|try-restart|force-reload|status|force-stop}" >&2
        exit 1
        ;;
esac

exit 0
