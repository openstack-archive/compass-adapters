gem: --no-ri --no-rdoc
:backtrace: false
:benchmark: false
:bulk_threshold: 1000
:sources:
#if $getVar("local_repo","") != ""
- $local_repo/gem_repo/
#else
- https://rubygems.org/
#end if
:update_sources: true
:verbose: true
#if $getVar("local_repo","") == ""
    #if $getVar('proxy', '') != ""
gem: --http-proxy=$proxy
    #end if
#end if
EOF

